<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cardview_light_background"
    tools:context=".Lobby">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/lobbyback"
        android:id="@+id/join_code">
        <Button
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="67dp"
            android:id="@+id/shareCode"
            android:layout_marginEnd="41dp"
            android:background="@drawable/startgamebtn"
            android:text="SHARE CODE"
            android:textColor="#000"
            android:fontFamily="serif-monospace"/>
    </RelativeLayout>
    <TextView
        android:layout_width="247dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="105dp"
        android:gravity="center"
        android:text="SECRET CODE"
        android:fontFamily="serif-monospace"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/LobbyCodeText"
        android:layout_width="147dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="join code"
        android:textColor="#000000"
        android:fontFamily="serif-monospace"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/join_code"
        android:text="Waiting for people to Join..."
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="20sp"
        android:id="@+id/waiting_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerList"
        android:layout_width="wrap_content"
        android:layout_height="269dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="26dp" />

    <Button
        android:id="@+id/start_game"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/startgamebtn"
        android:fontFamily="serif-monospace"
        android:shadowColor="#378AA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:visibility="gone"
        android:shadowRadius="5"
        android:text="PREPARE GAME"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
</RelativeLayout>